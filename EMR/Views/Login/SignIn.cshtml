
@{
    ViewBag.Title = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="block-center mt-4 wd-xl">
    <!-- START card-->
    <div class="card card-flat">
        <div class="card-header text-center bg-dark">
            <a href="#">
                <img class="block-center rounded" src="~/Content/img/logo.svg" style="max-height:65px;" alt="Image">
            </a>
        </div>
        <div class="card-body">
            <p class="text-center py-2">Войдите для продолжения</p>
             @Html.ValidationSummary("", new { @style = "color:red;", @class= "text-center py-2"})
             @using (Html.BeginForm("SignIn", "Login", FormMethod.Post, new {@class="mb-3", @id= "loginForm", @role="form", @novalidate=""}))
             {
                <div class="form-group">
                    <div class="input-group with-focus">
                        <input class="form-control border-right-0" id="exampleInputEmail1" type="login" name="UserName" placeholder="Логин" autocomplete="off" required>
                        <div class="input-group-append">
                            <span class="input-group-text fa fa-user text-muted bg-transparent border-left-0"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group with-focus">
                        <input class="form-control border-right-0" id="exampleInputPassword1" type="password" name="Password" placeholder="Пароль" required>
                        <div class="input-group-append">
                            <span class="input-group-text fa fa-lock text-muted bg-transparent border-left-0"></span>
                        </div>
                    </div>
                </div>
                <div class="clearfix">
                    <div class="checkbox c-checkbox float-left mt-0">
                        <label>
                            <input type="checkbox" value="true" checked="unchecked" name="RememberMe">
                            <span class="fa fa-check"></span>Запомнить меня
                        </label>
                    </div>
                    <div class="float-right">
                        <a class="text-muted" href="recover.html">Забыли пароль?</a>
                    </div>
                </div>
                <button class="btn btn-block btn-primary mt-3" type="submit">Вход</button>           
             }
        </div>
    </div>
    <!-- END card-->
    <div class="p-3 text-center">
        <span class="mr-2">&copy;</span>
        <span>2018</span>
        <span class="mr-2">-</span>
        <span>ЭАК</span>
        <br>
        <span></span>
    </div>
</div>
